@model Kiralama

<form method="post">
    <input asp-for="Id" hidden />
    <input asp-for="OgrenciId" hidden />
    <input asp-for="KitapId" hidden />

    <div class="border p-3 mt-3">
        <div class="row pb-3">
            <h2 class="text-primary">Kiralama Kaydı Sil</h2>
            </hr>
        </div>

        <div class="mb-3">
            <label asp-for="OgrenciId"></label>
            <input asp-for="OgrenciId" disabled class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Kitap.KitapAdi">Kitap Adı</label>
            <input asp-for="Kitap.KitapAdi" disabled class="form-control" />
        </div>


        <button type="submit" class="btn btn-lg btn-primary" style="width:200px">Kiralama Kaydı Sil</button>

        <button class="btn btn-lg btn-danger" asp-controller="Kiralama" asp-action="Index" style="float: right;">Vazgeç</button>

    </div>
</form>

