@model Kitap

<form method="post" enctype="multipart/form-data">
    <input asp-for="ResimUrl" hidden />

    <div class="row">
        <div class="col-10">
            <div class="border p-3 mt-3">
                <div class="row pb-3">

                    <h2 class="text-primary">@(Model == null ? "Kitap Ekle" : "Kitap Guncelle")</h2>
                    </hr>
                </div>

                <div class="mb-3">
                    <label asp-for="KitapAdi"></label>
                    <input asp-for="KitapAdi" class="form-control" />
                    <span class="text-danger" asp-validation-for="KitapAdi"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="KitapTuruId"></label>
                    <select asp-for="KitapTuruId" name="KitapTuruId" asp-items="ViewBag.KitapTuruList" class="form-select"></select>
                    <span class="text-danger" asp-validation-for="KitapTuruId"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Tanim"></label>
                    <input asp-for="Tanim" class="form-control" />
                    <span class="text-danger" asp-validation-for="Tanim"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Yazar"></label>
                    <input asp-for="Yazar" class="form-control" />
                    <span class="text-danger" asp-validation-for="Yazar"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Fiyat"></label>
                    <input asp-for="Fiyat" class="form-control" />
                    <span class="text-danger" asp-validation-for="Fiyat"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ResimUrl"></label>
                    <input type="file" name="file" class="form-control" />

                </div>
                @if (Model != null)
                {
                    <button type="submit" class="btn btn-lg btn-primary" style="width:200px">Kitap Guncelle</button>
                }
                else
                {
                    <button type="submit" class="btn btn-lg btn-primary" style="width:200px">Kitap Ekle</button>
                }


                <button class="btn btn-lg btn-danger" asp-controller="Kitap" asp-action="Index" style="float: right;">Vazgeç</button>

            </div>
        </div>
        <div class="col-2">
            @if (Model != null)
            {
                <img src="@Model.ResimUrl" width="100%" style="border-radius:7px; border:1px solid #bbb9b9 " />
            }
            
        </div>
    </div>


</form>

