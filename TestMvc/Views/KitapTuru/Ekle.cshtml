@model KitapTuru

<form method="post">
    <div class="border p-3 mt-3">
        <div class="row pb-3">
            <h2 class="text-primary">Kitap Türü Ekle</h2>
            </hr>
        </div>

        <div class="mb-3">
            <label asp-for="Ad"></label>
            <input asp-for="Ad" class="form-control"/>
            <span class="text-danger" asp-validation-for="Ad"></span>
        </div>
        <button type="submit" class="btn btn-lg btn-primary" style="width:200px">Kitap Türü Ekle</button>

        <button class="btn btn-lg btn-danger" asp-controller="KitapTuru" asp-action="Index" style="float: right;">Vazgeç</button>

    </div>
</form>

