@model List<KitapTuru>

@if(TempData["basarili"] != null)
{
    <h3 class="text-success">@TempData["basarili"]</h3>
}

<div class="container">

    <div class="row pt-3 pb-4"
        <div>
                <h1>Kitap Turleri</h1>
        </div>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Kitap Türü
                </th>
                <th>

                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var kitapTuru in Model)
            {
                <tr>
                    <td>@kitapTuru.Id</td>
                    <td>@kitapTuru.Ad</td>
                    <td>
                        <a class="btn btn-success btn-sm" asp-controller="KitapTuru" asp-action="Guncelle" asp-route-id="@kitapTuru.Id">Güncelle</a>
                    </td>
                    <td>
                        <a class="btn btn-primary btn-sm btn-danger" asp-controller="KitapTuru" asp-action="Sil" asp-route-id="@kitapTuru.Id">Sil</a>
                    </td>
                </tr>
            }
    
        </tbody>
    </table>

    <div class="row pt-3 pb-2">
        <div>
            <a asp-controller="KitapTuru" asp-action="Ekle" class="btn btn-lg btn-primary" type="button">
                Yeni Kitap Türü Oluştur
            </a>
        </div>
    </div>


</div>