@model KitapTuru

<form method="post">
    <input asp-for="Ad" hidden />
    <div class="border p-3 mt-3">
        <div class="row pb-3">
            <h2 class="text-primary">Kitap Türü Sil</h2>
            </hr>
        </div>

        <div class="mb-3">
            <label asp-for="Ad"></label>
            <h5>@Model.Ad</h5>
            <span class="text-danger" asp-validation-for="Ad"></span>
        </div>
        <button type="submit" class="btn btn-lg btn-primary" style="width:200px">Kitap Türü Sil</button>

        <button class="btn btn-lg btn-danger" asp-controller="KitapTuru" asp-action="Index" style="float: right;">Vazgeç</button>

    </div>
</form>

